---
import { props } from "vanil"

---
<html>
  <head>
    
    <title>{ props.title || "WebApp Security" }</title>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/reveal.js/dist/reveal.css" />
    <link rel="stylesheet" href="/reveal.js/dist/theme/black.css" />
    <link rel="stylesheet" href="/reveal.js-plugins/customcontrols/style.css" />
    <link rel="stylesheet" href="/reveal.js-plugins/chalkboard/style.css" />
    <link rel="stylesheet" href="/reveal.js-plugins/questions/style.css" />

    <script src="/reveal.js/dist/reveal.js"></script>
    <script src="/reveal.js-menu/menu.js"></script>
    <script src="/reveal.js-plugins/animate/plugin.js"></script>
    <script src="/reveal.js-plugins/animate/svg.min.js"></script>
    <script src="/reveal.js-plugins/chalkboard/plugin.js"></script>
    <script src="/reveal.js-plugins/customcontrols/plugin.js"></script>
    <script src="/reveal.js-plugins/questions/plugin.js"></script>
    <script src="/reveal.js-plugins/embed-tweet/plugin.js"></script>
    <script src="/reveal.js-plugins/fullscreen/plugin.js"></script>
  </head>
  <body>

    <div class="reveal">
      <div class="slides">
        <slot />
      </div>
    </div>

    <script>
      import { refs, on, events } from "vanil"

      const deck = new Reveal({
        plugins: [ RevealMenu, RevealAnimate, RevealChalkboard, RevealCustomControls, RevealEmbedTweet, RevealFullscreen ]
      })

      deck.initialize({
        animate: {
          autoplay: true
        }, 
        customcontrols: {
           controls: [
            {
                id: 'toggle-overview',
                title: 'Toggle overview (O)',
                icon: '<i class="fa fa-th"></i>',
                action: 'deck.toggleOverview();'
                },
                { icon: '<i class="fa fa-pen-square"></i>',
                title: 'Toggle chalkboard (B)',
                action: 'RevealChalkboard.toggleChalkboard();'
                },
                { icon: '<i class="fa fa-pen"></i>',
                title: 'Toggle notes canvas (C)',
                action: 'RevealChalkboard.toggleNotesCanvas();'
                }
            ]

        }
      })
    </script>
    <style>
        :root {
            --r-background-color: #003a90;
        }

        .login-form {
          font-size: 24px;
          p, input, button {
            font-size: 24px;
          }
        }

        p, div {
          font-size: 28px
        }

      .console {
        font-family: monospace;
        font-size: 16px;
      }

      button, input, textarea {
        font-size: 16px;
        background-color: #fff;
        font-weight: bold;
        border-radius: 5px;
        padding: 10px;
      }


      code, textarea {
        text-align: center;
        display: block;
        font-family: monospace;
      }


    </style>

  </body>
</html>